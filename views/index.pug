extends template.pug
block contents
  include includes/login.component.pug
  include includes/signup.component.pug
  .row
    if currentUser
      .col-sm-12.col-md-12.col-lg-3.mt-2
          //- profile info card
          .card
            .card-body
              h5.card-title Profile
              small.text-dark Username: 
                a(href="/profile") #{currentUser.username}
              br
              small.text-dark Status: 
                span.text-success Active
      .col-sm-12.col-md-12.col-lg-6
        each blog in blogs
            .card.mt-2.bt-2
              .card-body
                .card-title
                  h5.mt-0 
                    a.text-dark(href=`/blogs/${blog._id}`) #{blog.title}
                  small.text-muted Author: #{blog.author.username}
                .card-text
                  | #{blog.description}
    else
      .col-sm-12.col-md-12.col-lg-3.mt-2
        .card
          .card-body
            h5.card-title Profile
            small.text-dark Username: Unknown
            br
            small.text-dark Status: 
              span.text-warning Logged out
      .col-sm-12.col-md-12.col-lg-6
          include includes/flash.component.pug
          each blog in blogs
              .card.mt-2.bt-2
                .card-body
                  .card-title
                    h5.mt-0 
                      a.text-dark(href=`/blogs/${blog._id}`) #{blog.title}
                    small.text-muted Author: #{blog.author.username}
                  .card-text
                    | #{blog.description}
