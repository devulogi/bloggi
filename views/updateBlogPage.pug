extends template.pug
block links
  link(rel="stylesheet", href="../../vendors/b4/bootstrap.min.css")
  script(src="../../vendors/jQ3.5.1/jquery-3.5.1.min.js")
  script(src="../../vendors/popper/popper.min.js")
  script(src="../../vendors/b4/bootstrap.min.js")
  link(rel="stylesheet", href="../../vendors/summernote/summernote.min.css")
  script(src="../../vendors/summernote/summernote.min.js")
  script(src="../../script.js")
block contents
  .container
    form(action=`/blogs/update/${blog._id}` method="post")
      .form-group
        label.text-muted(for="title") Title: 
        input.form-control#title(name="title" value=`${blog.title}` required autofocus)
        input(name="id" hidden value=`${currentUser._id}`)
      .form-group
        label.text-muted(for="description") Description:
        textarea#description.form-control(name="description", required, cols="30", rows="3")=blog.description
      .form-group
        textarea.summernote(name="content" required)=blog.content
      button.btn.btn-success Submit 
